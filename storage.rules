rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read any file in the images directory
    match /images/{userId}/{allPaths=**} {
      // Allow read access to all authenticated users
      allow read: if request.auth != null;
      
      // Allow write access only to the owner of the file
      // Also validate content type and size
      allow write: if 
        request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 5 * 1024 * 1024 && // 5MB max file size
        request.resource.contentType.matches('image/.*');
    }
    
    // Profile pictures have their own rules
    match /profilePictures/{userId}/{allPaths=**} {
      // Anyone can view profile pictures
      allow read: if true;
      
      // Only the user can upload/update their own profile picture
      allow write: if 
        request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 2 * 1024 * 1024 && // 2MB max for profile pictures
        request.resource.contentType.matches('image/.*');
    }
    
    // Default rule - deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
